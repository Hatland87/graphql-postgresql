datasource postgresql {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  code        String        @unique
  id          Int           @default(autoincrement()) @id
  name        String
  lectures    Lecture[]
}

model Semester {
  id          Int           @default(autoincrement()) @id
  name        String        @unique
}

model Teacher {
  id          Int           @default(autoincrement()) @id
  name        String        @unique
  lectures    Lecture[]     @relation(references: [id])
}

model Lecture {
  id              Int       @default(autoincrement()) @id
  timeofrecording DateTime
  duration        Int
  course          Course    @relation(fields: [courseid], references: [id])
  courseid        Int
  semester        Semester  @relation(fields: [semesterid], references: [id])
  semesterid      Int
  teachers        Teacher[] @relation(references: [id])
  title           String
  audiolink       String
  cameralink      String
  screenlink      String
  combinedlink    String
}

model UncategorizedLecture {
  id              Int       @default(autoincrement()) @id
  timeofrecording DateTime
  duration        String
  course          String
  semester        Semester  @relation(fields: [semesterid], references: [id])
  semesterid      Int
  teachers        String
  title           String
  audiolink       String
  cameralink      String
  screenlink      String
  combinedlink    String
}