generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id   Int    @default(autoincrement()) @id
  name String
  book Book[]
}

model Book {
  authorId Int
  id       Int    @default(autoincrement()) @id
  title    String
  author   Author @relation(fields: [authorId], references: [id])
}