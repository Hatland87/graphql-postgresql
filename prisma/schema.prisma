generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  code    String    @unique
  id      Int       @default(autoincrement()) @id
  name    String
  lecture Lecture[]
}

model Lecture {
  courseId        Int
  duration        Int
  id              Int      @default(autoincrement()) @id
  semesterId      Int
  teacherId       Int
  timeofrecording DateTime
  title           String
  course          Course   @relation(fields: [courseId], references: [id])
  semester        Semester @relation(fields: [semesterId], references: [id])
  teacher         Teacher  @relation(fields: [teacherId], references: [id])
}

model Semester {
  id      Int       @default(autoincrement()) @id
  name    String    @unique
  lecture Lecture[]
}

model Teacher {
  id      Int       @default(autoincrement()) @id
  name    String    @unique
  lecture Lecture[]
}